{
    "name": "Chrome Web Themer",
    "version": "0.3.4",
    "manifest_version": 2,
    "description": "__MSG_appDescription__",
    "icons": {
        "128": "images/chrome_web_themer_icon.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": [
            "scripts/chromereload.js",
            "scripts/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "run_at": "document_end",
        "matches": ["http://*/*", "https://*/*"],
        "js": ["bower_components/angular/angular.min.js", "scripts/contentscript.js"],
        "css": ["bower_components/angular/angular-csp.css", "styles/inject.css"]
    }],
    "web_accessible_resources": ["bower_components/angular/*", "bower_components/angular-bootstrap-colorpicker/js/bootstrap-colorpicker-module.min.js", "bower_components/angular-bootstrap-contextmenu/contextMenu.js", "scripts/contentscript.js", "styles/inject.css"],
    "permissions": [
        "tabs",
        "background",
        "http://*/*",
        "https://*/*",
        "activeTab",
        "alarms",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "128": "images/chrome_web_themer_icon.png"
        },
        "default_title": "Chrome Web Themer",
        "default_popup": "popup.html",
        "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
    }
}
